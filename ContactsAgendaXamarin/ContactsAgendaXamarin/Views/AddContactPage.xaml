<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ContactsAgendaXamarin.Views.AddContactPage">
    <ScrollView VerticalOptions="FillAndExpand">
        <StackLayout Padding="10" VerticalOptions="FillAndExpand">
            <Entry Text="{Binding Name}" Style="{StaticResource nameEntry}"/>
            <Entry Text="{Binding PhoneNumber}" Style="{StaticResource phoneEntry}"/>
            <Button Command="{Binding SaveCommand}" Text="Save" Style="{StaticResource saveButton}"/>
        </StackLayout>
    </ScrollView>
</ContentPage>